<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>mod_know_search</name>
	<author>Bruno Batista</author>
	<creationDate>13/08/2012</creationDate>
	<copyright>Copyright (C) 2012 AtomTech, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>bruno@atomtech.com.br</authorEmail>
	<authorUrl>http://www.atomtech.com.br</authorUrl>
	<version>2.5.0</version>
	<description>MOD_KNOW_SEARCH_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_know_search">mod_know_search.php</filename>
		<folder>tmpl</folder>
		<filename>mod_know_search.xml</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="language">
		<language tag="pt-BR">pt-BR/pt-BR.mod_know_search.ini</language>
		<language tag="pt-BR">pt-BR/pt-BR.mod_know_search.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="text" type="text" class="inputbox" size="40" label="MOD_KNOW_SEARCH_FIELD_TEXT_LABEL" description="MOD_KNOW_SEARCH_FIELD_TEXT_DESC" />
				<field name="button_text" type="text" class="inputbox" size="40" label="MOD_KNOW_SEARCH_FIELD_BUTTON_TEXT_LABEL" description="MOD_KNOW_SEARCH_FIELD_BUTTON_TEXT_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field name="cachemode" type="hidden" default="static">
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
