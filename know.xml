	<authorUrl>http://www.atomtech.com.br</authorUrl>
	<version>2.5.0</version>
	<description>COM_KNOW_XML_DESCRIPTION</description>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<files folder="site">
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>models</folder>
		<folder>views</folder>
		<filename>know.php</filename>
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>metadata.xml</filename>
		<filename>router.php</filename>
	</files>
	<languages folder="site">
		<language tag="pt-BR">language/pt-BR.com_know.ini</language>
	</languages>
	<administration>
		<menu img="../media/com_know/images/menu/know.png">com_know</menu>
		<submenu>
			<menu link="option=com_know" view="know" img="../media/com_know/images/menu/know.png" alt="Know/Know">com_know</menu>
			<menu link="option=com_categories&amp;extension=com_know" view="categories" img="class:category" alt="Know/Categories">com_know_categories</menu>
		</submenu>
		<files folder="admin">
			<folder>controllers</folder>
			<folder>help</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>know.php</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
		</files>
		<languages folder="admin">
			<language tag="pt-BR">language/pt-BR.com_know.ini</language>
			<language tag="pt-BR">language/pt-BR.com_know.sys.ini</language>
		</languages>
	</administration>
</extension>
